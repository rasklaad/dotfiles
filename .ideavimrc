set nocompatible
filetype off
set mouse=a
set surround
set NERDTree
set relativenumber
let mapleader=","
nnoremap <leader>jd :action QuickJavaDoc<CR>
nnoremap <leader>nw :action NextSplitter<CR>
nnoremap <leader>rn :action RenameElement<CR>
nnoremap <leader>gi :action GotoImplementation<CR>
nnoremap <leader>gt :action GotoTypeDeclaration<CR>
nnoremap <leader>gb :action Back<CR>
nnoremap <leader>tb :action ToggleLineBreakpoint<CR>
nnoremap <C-w>L :action MoveEditorToOppositeTabGroup<CR>

nnoremap <leader>nh :action VcsShowNextChangeMarker<CR>
nnoremap <leader>ph :action VcsShowPrevChangeMarker<CR>
nnoremap <leader>rf :action RecentFiles<CR>
nnoremap <leader>rl :action RecentLocations<CR>

nnoremap <leader>hd :action HideActiveWindow<CR>
nnoremap <leader>haw :action HideAllWindows<CR>
